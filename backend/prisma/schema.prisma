generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password  String
  name String 
  admin Boolean @default(false)
  created DateTime @updatedAt


  @@map("users")
}

model Trails {
  id    Int     @id @default(autoincrement())
  name String 
  contents Contents[]
  created_at DateTime @updatedAt

  @@map("trails")
}

model Contents {
  id Int @id @default(autoincrement())
  title  String 
  topic String? @default(" ")
  provider String?
  duration String?
  reference String
  created_at DateTime @updatedAt
  trails Trails @relation(fields: [trailId], references: [id])
  trailId Int

  @@map("contents")
}

